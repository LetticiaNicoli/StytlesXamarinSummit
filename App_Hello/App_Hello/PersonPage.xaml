<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Hello.PersonPage"
             BackgroundColor="#F3B801">

  <ScrollView>
    <StackLayout Padding="20,0,20,20">
      <!--Style comum-->
      <Label Text="Infos - Palestrante" TextColor="#FFFFFF" FontSize="20" FontAttributes="Bold"/>
      <!--Style comum-->
      <StackLayout>
        <Label Text="Nome Completo" />
        <Entry x:Name="nomeCompleto"/>
      </StackLayout>
      <StackLayout>
        <Label Text="CPF" />
        <Entry x:Name="cpf" Placeholder="XXX.XXX.XXX-XX"/>
      </StackLayout>
      <StackLayout>
        <Label Text="Data de Nascimento" />
        <DatePicker VerticalOptions="CenterAndExpand" >
          <DatePicker.Format>dd-MM-yyyy</DatePicker.Format>
        </DatePicker>
      </StackLayout>
      <StackLayout>
        <Label Text="E-mail" />
        <Entry x:Name="email" Placeholder="email@email.com"/>
      </StackLayout>
      <StackLayout>
        <Label Text="Twitter" />
        <Entry x:Name="twitter" Placeholder="@FakeName" />
      </StackLayout>
      <!--Style comum-->
      <Button Text="Salvar" Style="{StaticResource buttonStyle}"/>
      <!--Style comum-->
    </StackLayout>
  </ScrollView>

</ContentPage>